{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "lib",
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "node_modules/*",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
        "**/*.spec.ts",
        "examples",
        "tests"
    ],
    "include": [
        "./src",
        "./tests",
        "jest.config.js"
    ]
}
